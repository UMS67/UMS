<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="com.example.demo6.CoursesController"
      spacing="15"
      xmlns:fx="http://javafx.com/fxml">

    <!-- Action buttons -->
    <HBox spacing="10">
        <Button text="Add New Course" onAction="#handleAddCourse"/>
        <Button text="Refresh" onAction="#loadCourses"/>
    </HBox>

    <!-- Course list -->
    <ListView fx:id="courseListView" VBox.vgrow="ALWAYS"/>
</VBox>